<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= yield :head %>
</head>
<body>
	<header>
		<div class="container">
			<div class="left">
				<%= link_to "POSTUNE", root_path %>
			</div>
			<div class="right text">
				<% if signed_in? %>
					<%= current_user.name %>
				<% end %>
			</div>
		</div>
	</header>
	<div id="main">
		<div class="container">
			<%= yield %>
		</div>
	</div>
	<footer>
		<div class="container">
			<div class="left">
				<%= link_to "Code", "https://github.com/ferristseng/Postune" %>
				<%= link_to "FAQ", faq_path %>
				<%= link_to "Rules", rules_path %>
				<%= link_to "Contact", contact_path %>
				<% if signed_in? %>
					<%= link_to "Logout", user_logout_path %>
				<% else %>
					<%= link_to "Login", user_login_path %>
					<%= link_to "Register", user_register_path %>
				<% end %>
			</div>	
			<div class="right text">
				<%= link_to raw("Postune &copy; 2012"), root_path %>
			</div>
		</div>
	</footer>
</body>
</html>
