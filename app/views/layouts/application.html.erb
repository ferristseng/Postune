<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= yield :head %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="container">
		<header>
			<div class="left">
				<%= link_to image_tag('main-logo.png', :alt => "Postune"), root_path %>
			</div>
			<div class="right">
				<% if signed_in? %>
					<div class="btn-extend">
						<a class="btn" data-toggle="dropdown" href="#">
							<%= current_user.name %> 
					    <span class="caret"></span>
					  </a>
					  <ul class="dropdown-menu">
					  	<li><%= link_to current_user.name, user_user_path(current_user) %></li>
					  	<li class="divider"></li>
					  	<li><%= link_to "Logout", user_logout_path %></li>
					  </ul>
					</div>
				<% else %>
					<%= link_to "Login", user_login_path, :class => "btn" %>
					<%= link_to "Register", user_register_path, :class => "btn blue" %>
				<% end %>
			</div>
		</header>
	</div>
	<div class="container" id="main">
		<div class="row-fluid">
			<div class="span12">
				<%= yield %>
			</div>
		</div>
	</div>
	<div class="container">
		<footer class="wrap">
			<div class="left">
				Ferris Tseng
			</div>
			<div class="right">
				Postune &copy; 2012
			</div>
		</footer>
	</div>
</body>
</html>
