<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<header>
			<div class="left">
				<%= link_to image_tag('main-logo.png', :alt => "Postune"), root_path %>
			</div>
			<div class="right">
				<% if signed_in? %>

				<% else %>
					<%= link_to "Login", user_login_path, :class => "btn" %>
					<%= link_to "Register", user_register_path, :class => "btn blue" %>
				<% end %>
			</div>
		</header>
	</div>
	<div class="container">
		<div class="row-fluid">
			<div class="span12">
				<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>
