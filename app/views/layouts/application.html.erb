<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= yield :head %>
</head>
<body>
	<header>
		<div class="container wrap">
			<div class="left">
				<%= link_to "POSTUNE", root_path %>
			</div>
			<div class="right">
				<% if signed_in? %>
					<%= current_user.name %>
				<% end %>
			</div>
		</div>
	</header>
	<div id="inner">
		<%= yield %>
	</div>
	<footer>
		<div class="container wrap">
			<div class="left">
				<%= link_to "Code", "https://github.com/ferristseng/Postune" %>
				<%= link_to "FAQ", "#" %>
				<%= link_to "Rules", "#" %>
				<%= link_to "Disclaimer", "#" %>
				<% if signed_in? %>
					<%= link_to "Logout", user_logout_path %>
				<% end %>
			</div>	
			<div class="right">
				<%= link_to raw("Postune &copy; 2012"), root_path %>
			</div>
		</div>
	</footer>
</body>
</html>
