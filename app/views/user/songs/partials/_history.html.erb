<div class="songs-list">
	<% @songs.each do |s| %>
	<div class="song">
		<%= form_for s, :url => user_song_path(s.id), :remote => true do |f| %>
			<div class="left artwork">
				<%= !s.artwork.nil? ? image_tag(s.artwork, :alt => s.title, :width => 32) : '' %>
			</div>
			<div class="left song-field"><%= f.text_field :artist %></div>
			<div class="left song-field"><%= f.text_field :title %></div>
			<div class="left song-field"><%= f.text_field :album %></div>
			<div class="left submit"><%= f.submit "Play", :class => "btn med" %></div>
		<% end %>
	</div>
	<% end %>
</div>
<div class="pagination">

</div>