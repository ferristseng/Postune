<div class="row">
	<div class="span4">
		<h3>Login</h3>
		<%= form_for @user, :url => user_sessions_path do |f| %>
			<div class="field">
				<%= f.label :name %>
				<%= f.text_field :name %>
				<%= required_field @user, :name %>
			</div>
			<div class="field">
				<%= f.label :password %>
				<%= f.password_field :password %>
				<%= required_field @user, :password %>
			</div>
			<div class="form-actions">
				<%= f.submit "Login", :class => "btn" %>
			</div>
		<% end %>
	</div>
	<div class="span4">
		<h3>Use another account to login</h3>
		<%= render 'shared/alternate_signin' %>
	</div>
</div>
