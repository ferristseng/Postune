<%= form_for @user, :url => user_sessions_path do |f| %>
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div class="form_actions">
		<%= f.submit "Login", :class => "btn med" %>
	</div>
<% end %>