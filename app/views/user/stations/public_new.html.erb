<% if signed_in? %>
<div class="row">
	<div class="span8">
		<h3>Recently Played</h3>
	</div>
</div>
<div class="row" id="recently-played">
	<% if @recent.present? %>
		<% 4.times do |i| %>
			<% if @recent[i].present? %>
				<div class="span2">
					<div class="artwork"><%= image_tag @recent[i].artwork %></div>
					<div class="song-title song-info"><%= @recent[i].title %></div>
					<div class="song-info"><%= @recent[i].artist %></div>
					<div class="song-info"><%= @recent[i].album %></div>
				</div>
			<% else %>
				<div class="span2"></div>
			<% end %>
		<% end %>
	<% else %>
		<div class="span2" id="no-recent">
			<div class="med-icon alert"></div>
		</div>
		<div class="span2">
			<p class="heavy">You have not played any songs recently!</p>
			<p>You can join any public station to start playing music, or create a private station where only you and chosen users can play music.</p>			
		</div>
		<div class="span4"></div>
	<% end %>
</div>
<% end %>
<div class="row" id="station-text">
	<div class="span6">
		<h3>Start Listening!</h3>
		<p>Join a station by entering the name of an already created station, or type in a station name to create one if it does not already exist.</p>
		<%= form_for @station, :url => p_create_user_stations_path, :html => { :id => "station-form" } do |f| %>
			<div class="wrap">
				<div class="field">
					<%= f.text_field :name, :placeholder => Settings['placeholders']['station_form'] %>
				</div>
				<div class="form-actions center text unified">
					<%= f.submit "Go", :class => "btn" %>
				</div>
			</div>
			<div class="field no-margin"><%= required_field @station, :name %></div>
		<% end %>
	</div>
	<div class="span2">
		<h3>Create</h3>
		<p>Create a private station to control who gets to play music.</p>
		<div class="center text padded"><%= link_to "Create Station", new_user_station_path, :class => "btn green full" %></div>
	</div>
</div>