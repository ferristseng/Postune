<div class="tab-frame open" id="chat-window">
	<div id="chat-wrapper">
		<div id="chat-text">

		</div>
		<div id="chat-form">
			<% if signed_in? %>
				<%= form_tag "#" do %>
					<div class="field">
						<%= text_field_tag :text, "", :placeholder => Settings['placeholders']['chat_form'], :autocomplete => "off" %>
					</div>
					<div class="form-actions">
						<%= submit_tag "Send", :class => "btn" %>
					</div>
				<% end %>
			<% else %>
				<div class="message notice">
					<%= Settings['errors']['chat_form']['logged_in'] %>
				</div>
			<% end %>
		</div>
	</div>
</div>