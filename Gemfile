source 'https://rubygems.org'

gem 'rails', '3.2.6'

# Postgresql Adapter
gem 'pg'

# Redis
gem 'redis'

# Will paginate
gem 'will_paginate'

gem 'soundcloud'

# Gems used only for Production
group :production do
	gem 'thin'
end

# Gems used only for Development
group :development do
	gem 'annotate'
	gem 'capistrano'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'curb'
gem 'stringex'
gem 'omniauth'
gem 'omniauth-facebook'
